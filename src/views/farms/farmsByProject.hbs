{{> navigation}}
<div class="bg-prueba p-4">
    <div class="row">
        <header class="mx-auto">
            {{#each proj}}
                <h4>Fincas vinculadas al proyecto {{nom_proyecto}} </h4>
            {{/each}}
        </header>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <div class="mt-3">
                    <div class="panel panel-default table table-striped">
                        <div class="panel-body">
                            <table class="table">
                            <thead class="bg-success text-white">
                                <tr>
                                <th>Cedula</th>
                                <th>Propietario</th>
                                <th>Nombre de la finca</th>
                                <th>Municipio</th>
                                <th>Proyecto</th>
                                <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each farmsByProject}}
                                    <tr>
                                    <td>{{nitProducer}}</td>
                                    <td>{{firstName}}</td>
                                    <td>{{nameFarm}}</td>
                                    <td>{{municipio}}</td>
                                    <td>{{proyecto_nom}}</td>
                                    <td><a href="/projectTracking/{{id_project_has_farm}}" class="text-decoration-none text-success"><small>visitas</small></a></td>
                                    </tr>
                                {{/each}}
                                
                            </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>