<div class="bg-prueba pt-3">
    <div class="row">
        <div class="col-md-7 mx-auto">
            <div class="div card">
                <div class="card-header header-style-format bg-success">
                    <div class="row">
                        <div class="col-md-3 text-center">
                        <img src="/img/logo.png" class="w-50" alt="">
                    </div>
                    <div class="col-md-7 text-center my-auto"> 
                        <h4 class="header-style">Fundación Asesorías e Investigaciones Profesionales</h4>
                        <p class="format-title-style">Formato de registro al productor</p>
                    </div>
                </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form action="/questionsProducer/{{dataIdFarm}}" method="POST">
                                <div class="col-md-12">    
                                    {{#each dataQuestionsProducer}}                   
                                    <ul>           
                                        <div class="row">                                        
                                            <div class="col-md-12">
                                                <strong>{{num_item1}}</strong>
                                                {{title1}}
                                            </div>      
                                            <div class="col-md-12">
                                                {{description1}}
                                            </div>  
                                            <div class="col-md-12">
                                                <strong>{{num_item2}}</strong>
                                                {{title2}}
                                            </div>  
                                            <div class="col-md-12">
                                                {{num_item3}}
                                                {{title3}}
                                            </div> 
                                            <div class="col-md-12">
                                                {{description2}}
                                            </div>                                                                   
                                        </div>           
                                    </ul>
                                    <div class="row mt-3 ml-5"> 
                                    <div class="col-md-12 prueba">
                                        <fieldset class="form-group">                        
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name={{id_questions_producer}} value="A">
                                                        <label class="form-check-label" for="gridRadios1">
                                                            {{answer1}}
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name={{id_questions_producer}} value="B">
                                                        <label class="form-check-label" for="gridRadios1">
                                                            {{answer2}}
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name={{id_questions_producer}} value="C">
                                                        <label class="form-check-label" for="gridRadios1">
                                                            {{answer3}}
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name={{id_questions_producer}} value="D">
                                                        <label class="form-check-label" for="gridRadios1">
                                                            {{answer4}}
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>     
                                                                            
                                        </fieldset>
                                    </div>
                            </div>

                                {{/each}}
                            </div>
                            <div class="col-md-12 text-center mt-3">
                                <button class="btn btn-warning">Enviar formulario</button>
                            </div>
                            </form>
                        </div>         
                    </div>
                </div>
            </div>
        </div>         
    </div>
</div>