{{> navigation}}
<div class="bg-prueba p-4">
    <div class="row">
        <header class="mx-auto">
            <p>Lineas productivas</p>
        </header>
    </div>
    <div class="row">
        <table class="table">
            <thead class="thead head-style">
                <tr class="mx-auto">
                <th scope="col" class="title-style-tab">Nombre de las lineas productivas</th>
                <th scope="col" class="title-style-tab">Descripción</th>
                <th scope="col" class="title-style-tab"></th>
                </tr>
            </thead>
            {{#each listSectors}}
            
                <tbody>
                    <tr>
                    <td class="title-style-tab">{{nom_sector}}</td>
                    <td class="title-style-tab">{{description}}</td>
                    <td class="title-style-tab">
                        {{!-- <a href="{{id_sector}}" class="btn btn-info">Modificar</a> --}}
                        <a href="/formatTypeList/{{id_sector}}" class="btn btn-info">Temáticas</a>
                    </td>
                    </tr>
                </tbody>
                {{else}}
                    <td colspan="3" class="col-md-4 text-center mt-4">
                        <p class="text-danger">Aún no has creado un formato para la esta temática </p>
                    </td>
                
            {{/each}}
        </table>
        <div class="form-group mx-auto">
            <a href="/productiveSectors" class="btn btn-warning">Agregar linea productiva</a>
        </div>
    </div>
</div>