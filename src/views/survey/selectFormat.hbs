{{> navigation  }}
<div class="bg-prueba mt-2">
    <div class="row">
        <div class="col-md-7 mx-auto">

            <div class="text-center bg-success text-white pt-2 pb-2"> 
                <h5>Seguimiento a la finca {{newData.nom_finca}}</h5>
            </div>

            <form action="/structuredFormat" class="mt-4" method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <label for=""><small>Identificador del proyecto:</small></label>
                            <input type="text" class="form-control" name="id_project_has_farm" value="{{newData.id_project_has_farm}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Nombre del Proyecto:</small></label>
                            <input type="text" class="form-control" name="proyecto_nom" value="{{newData.proyecto_nom}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Linea Productiva:</small></label>
                            <input type="text" class="form-control" name="linea_productiva" value="{{newData.linea_productiva}}" readonly>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-md-4">
                            <label for=""><small>Tematica</small></label>
                            <input type="text" class="form-control" name="tematica" value="{{newPru.nom_formatType}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Formato diligenciado</small></label>
                            <input type="text" class="form-control" name="formato" value="" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Nombre beneficiario:</small></label>
                            <input type="text" class="form-control" name="nom_beneficiario" value="{{newData.nom_beneficiario}}" readonly>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-md-4">
                            <label for=""><small>Cedula:</small></label>
                            <input type="text" class="form-control" name="cedula" value="{{newData.cedula}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Nombre finca:</small></label>
                            <input type="text" class="form-control" name="nom_finca" value="{{newData.nom_finca}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Municipio:</small></label>
                            <input type="text" class="form-control" name="municipio" value="{{newData.municipio}}" readonly>
                        </div> 
                    </div>
                     <div class="row mt-1">
                         <div class="col-md-4">
                            <label for=""><small>Vereda:</small></label>
                            <input type="text" class="form-control" name="vereda" value="{{newData.vereda}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Teléfono:</small></label>
                            <input type="text" class="form-control" name="telefono" value="{{newData.telefono}}" readonly>
                        </div>
                    </div>
   
                    <hr>

                    <div class="row mt-1">
                        <div class="col-md-5 mx-auto">
                            <div>
                                <select class="form-control" name='format'>
                                    <option value="">Seleccione una sección</option>
                                    {{#each formatos}}
                                        <option value="{{id_format}}">{{nom_format}}</option>
                                    {{/each}}
                                </select>
                            </div> 
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-warning">Siguiente</button>
                        </div> 
                    </div>
            </form>
        </div>
    </div>
</div>