{{> navigation  }}
<div class="bg-prueba mt-2">
    <div class="row">
        <div class="col-md-7 mx-auto">
            {{#each join}}
            <div class="text-center bg-success text-white pt-2 pb-2"> 
                <h5>Seguimiento a la finca {{nom_finca}}</h5>
            </div>

            <form action="/selectSector" class="mt-4" method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <label for=""><small>Identificador del proyecto:</small></label>
                            <input type="text" class="form-control" name="id_project_has_farm" value="{{id_project_has_farm}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Nombre del Proyecto:</small></label>
                            <input type="text" class="form-control" name="proyecto_nom" value="{{proyecto_nom}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Nombre beneficiario:</small></label>
                            <input type="text" class="form-control" name="nom_beneficiario" value="{{nom_beneficiario}}" readonly>
                        </div>
                    </div>
                    <div class="row mt-1 d-none">
                        <div class="col-md-4">
                            <label for=""><small>Tematica</small></label>
                            <input type="text" class="form-control" name="tematica" value="" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Formato diligenciado</small></label>
                            <input type="text" class="form-control" name="formato" value="" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Linea Productiva:</small></label>
                            <input type="text" class="form-control" name="linea_productiva" value="" readonly>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-md-4">
                            <label for=""><small>Cedula:</small></label>
                            <input type="text" class="form-control" name="cedula" value="{{cedula}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Nombre finca:</small></label>
                            <input type="text" class="form-control" name="nom_finca" value="{{nom_finca}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Municipio:</small></label>
                            <input type="text" class="form-control" name="municipio" value="{{municipio}}" readonly>
                        </div>
                        
                    </div>
                     <div class="row mt-1">
                         <div class="col-md-4">
                            <label for=""><small>Vereda:</small></label>
                            <input type="text" class="form-control" name="vereda" value="{{vereda}}" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for=""><small>Teléfono:</small></label>
                            <input type="text" class="form-control" name="telefono" value="{{telefono}}" readonly>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-warning text-white mt-3">Agregar una nueva visita</button>
                    </div>
             {{/each}}
            </form>

            <div class="text-center mt-4 pt-2 pb-2 bg-success text-white">
                <h5>Visitas realizadas a esta finca</h5>
            </div>

            <div>
                <table class="table mt-3">
                    <thead class="thead bg-light">
                        <tr class="mx-auto">
                            <th scope="col" class="title-style-tab">Nombre del formato diligenciado</th>
                            <th scope="col" class="title-style-tab">Codigo del formato</th>
                            <th scope="col" class="title-style-tab">Fecha de creación</th>
                            <th scope="col" class="title-style-tab"></th>        
                        </tr>
                    </thead>
                    {{#each survByFarm}}                
                        <tbody>
                            <tr>
                            <td class="title-style-tab">{{nom_format}}</td>
                            <td class="title-style-tab">{{id_survey}}</td>
                            <td class="title-style-tab">{{formatDate fecha_creacion 'lll'}}</td>
                            <td class="title-style-tab">
                                <a href="/fullDetailSurvey/{{id_survey}}" class="btn btn-warning text-white">Ver</a>
                            </td>
                            </tr>
                        </tbody>
                        {{else}}
                            <td colspan="3" class="col-md-4 text-center mt-4">
                                <p class="text-danger">Aún no has creado una visita para esta finca </p>
                            </td>    
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
</div>