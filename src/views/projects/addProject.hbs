{{> navigation}}
<div class="singup-style pt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h5 class="text-center">Agregar un nuevo proyecto</h5> 
                        </div>
                        <div class="card-body">
                            <form action="/addProject" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="nom_proyecto" placeholder="Ingrese el nombre del proyecto">
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control"  name="descripcion" rows="4" placeholder="Ingrese una descripción del proyecto si lo desea."></textarea>
                                </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="customFile" name="img" required>
                                    <label class="custom-file-label" for="customFile">Agrega el logo de la fundación para que salga en los informes</label>
                                </div>
                                <div class="form-group text-center mt-2">
                                    <button class="btn btn-success">Agregar proyecto</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>